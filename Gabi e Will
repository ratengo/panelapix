<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Presentes</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; background: #f9f9f9; }
    h1 { text-align: center; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #eee; }
    input[type="text"] { width: 90%; padding: 5px; }
    button { padding: 5px 10px; }
    .reserved { background-color: #d4ffd4; }
  </style>
</head>
<body>
  <h1>Lista de Presentes</h1>
  <table id="giftTable">
    <thead>
      <tr>
        <th>Presente</th>
        <th>Link</th>
        <th>Quem vai dar</th>
        <th>Reservar</th>
      </tr>
    </thead>
    <tbody>
      <!-- Os itens da tabela serÃ£o preenchidos via JavaScript -->
    </tbody>
  </table>

  <script>
    // Substitua pela URL da Web App do Apps Script
    const API_URL = 'https://script.google.com/macros/s/SEU_SCRIPT_ID/exec';

    // Carrega os dados da planilha
    async function carregarPresentes() {
      const resposta = await fetch(API_URL + '?action=read');
      const dados = await resposta.json();
      const tbody = document.querySelector('#giftTable tbody');
      tbody.innerHTML = '';

      dados.forEach(item => {
        const tr = document.createElement('tr');
        if (item.doador) tr.classList.add('reserved');

        tr.innerHTML = `
          <td>${item.presente}</td>
          <td><a href="${item.link}" target="_blank">Comprar</a></td>
          <td>${item.doador || ''}</td>
          <td>
            ${item.doador ? 'Reservado' : `
              <input type="text" placeholder="Seu nome">
              <button onclick="reservarPresente(${item.id}, this)">Reservar</button>
            `}
          </td>
        `;
        tbody.appendChild(tr);
      });
    }

    async function reservarPresente(id, btn) {
      const input = btn.previousElementSibling;
      const nome = input.value.trim();
      if (!nome) return alert('Digite seu nome para reservar.');

      btn.disabled = true;
      input.disabled = true;

      const resposta = await fetch(API_URL, {
        method: 'POST',
        body: JSON.stringify({ action: 'reserve', id, doador: nome })
      });
      const resultado = await resposta.json();
      if (resultado.success) carregarPresentes();
      else alert('Erro ao reservar.');
    }

    carregarPresentes();
  </script>
</body>
</html>
